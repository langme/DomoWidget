<?xml version="1.0" encoding="utf-8"?>
<android.support.wearable.view.BoxInsetLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/container"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context="service.labanquepostale.fr.wear.MainActivity" tools:deviceIds="wear">



    <TextView android:id="@+id/clock" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_gravity="bottom|start" android:textColor="@android:color/white"
        app:layout_box="all" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/domo_widget_wear">

        <ImageButton
            android:id="@+id/domoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/widget_vocal_preview"
            android:onClick="onClickMe" />

    </RelativeLayout>

</android.support.wearable.view.BoxInsetLayout>
